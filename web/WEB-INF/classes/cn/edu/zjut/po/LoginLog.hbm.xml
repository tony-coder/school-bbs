<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="cn.edu.zjut.po.LoginLog" table="login_log" schema="school_bbs">
        <id name="id">
            <column name="id" sql-type="bigint(20)"/>
        </id>
        <property name="userId">
            <column name="user_id" sql-type="int(11)"/>
        </property>
        <property name="loginTime">
            <column name="login_time" sql-type="datetime"/>
        </property>
        <property name="ip">
            <column name="ip" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="device">
            <column name="device" sql-type="varchar(255)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>